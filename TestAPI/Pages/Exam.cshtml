@page "/exam/{examId:int}/{studentId:int}" 
@model TestAPI.Pages.ExamModel 

Exam: @Model.Exam?.Title
Student ID: @Model.StudentId
@for (int i = 0; i < Model.Questions.Count; i++) { 
    var q = Model.Questions[i];
        <p><b>@(i+1). @q.Text</b></p>
        @foreach (var option in q.Options)
        {
            <div>
                <input type="radio" name="Answers[@i].SelectedOptionId" value="@option.Id" required /> @option.Text
            </div>
        }
        <input type="hidden" name="Answers[@i].QuestionId" value="@q.Id" />
}
<button type="submit">ثبت آزمون</button>
